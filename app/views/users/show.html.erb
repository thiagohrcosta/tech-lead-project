<div class="container bg-user-container">
  <div class="row">
    <div class="col-lg-6">
      <img class="img-dev-show bg-dev-show" src="<%= @user.photo %>">

    </div>
    <div class="col-lg-6">
      <%= @user.first_name %>
      <%= @user.email %>
    </div>
  </div>

  <h2 class="text-contracts">People Hired</h2>
  <div>
    <% @user.contracts.each do |contract| %>
      <div class="contracts-display">
        <img class="img-dev-contract" src="<%= contract.developer_profile.user.photo %>">
        <div>
          <p><%= contract.developer_profile.name %></p>
          <p><%= contract.developer_profile.user.email %></p>
        </div>
        <p>Contract number: <%= contract.id %>
        <div>
          <%= link_to "Mark as complete",destroy_contract_path(contract.id), method: :delete, data: { confirm: "Are you sure?"}, class: "btn-complete" %>
        </div>
      </div>
    <% end %>
  </div>

</div>

<div>
</div>


